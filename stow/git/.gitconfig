[includeIf "gitdir:~/workspaces/*"]
	path = ~/dotfiles/gitconfig/gitconfig.cepton.inc
[includeIf "gitdir:~/cepton/*"]
	path = ~/dotfiles/gitconfig/gitconfig.cepton.inc

[merge]
	tool = vimdiff

[color]
	ui = auto

[credential]
	helper = cache --timeout=28800
[push]
	default = simple
[core]
	excludesfile = ~/dotfiles/gitconfig/gitignore
[pull]
	rebase = true
