{
    "workbench.colorTheme": "Gruvbox Dark Soft",
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "/Users/jmdaly/dotfiles/stow/neovim/.config/nvim/init.lua",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    // Editor settings that match Neovim preferences
    "editor.lineNumbers": "relative",
    "editor.cursorSurroundingLines": 5,
    "editor.folding": true,
    "editor.foldingStrategy": "indentation",
    "editor.rulers": [80, 120],
    "editor.wordWrap": "off",
    "editor.scrollBeyondLastLine": false,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": false,
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.snippetSuggestions": "inline",

    // Workbench settings for a better experience
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": "multiple",
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.startupEditor": "none",

    // File settings that match common Neovim workflows
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },

    // Search settings similar to your Neovim/fzf setup
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,

    // Terminal settings
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.copyOnSelection": true,

    // Git settings
    "git.enableSmartCommit": true,
    "git.autofetch": true,

    // Neovim plugin specific settings
    "vscode-neovim.neovimClean": false,
    "vscode-neovim.highlightGroups.highlights": {
        "Directory": "asvetliakov.vscode-neovim",
        "IncSearch": {
            "backgroundColor": "theme.editor.findMatchBackground",
            "borderColor": "theme.editor.findMatchBorder"
        },
        "Search": {
            "backgroundColor": "theme.editor.findMatchHighlightBackground",
            "borderColor": "theme.editor.findMatchHighlightBorder"
        },
        "Visual": {
            "backgroundColor": "theme.editor.selectionBackground"
        },
        "Conceal": {
            "foreground": "theme.editor.foreground"
        },
        "CursorLine": {
            "backgroundColor": "theme.editor.lineHighlightBackground"
        }
    },

    // Remote settings
    "remote.SSH.connectTimeout": 60,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "thinkpad": "linux",
        "pineapple": "linux"
    },

    // Language-specific settings that reflect your Neovim configuration
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[c]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "[lua]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "sumneko.lua"
    },

    // Terminal color customizations matching your Gruvbox theme
    "workbench.colorCustomizations": {
        "terminal.background":"#32302F",
        "terminal.foreground":"#D5C4A1",
        "terminalCursor.background":"#D5C4A1",
        "terminalCursor.foreground":"#D5C4A1",
        "terminal.ansiBlack":"#32302F",
        "terminal.ansiBlue":"#83A598",
        "terminal.ansiBrightBlack":"#665C54",
        "terminal.ansiBrightBlue":"#83A598",
        "terminal.ansiBrightCyan":"#8EC07C",
        "terminal.ansiBrightGreen":"#B8BB26",
        "terminal.ansiBrightMagenta":"#D3869B",
        "terminal.ansiBrightRed":"#FB4934",
        "terminal.ansiBrightWhite":"#FBF1C7",
        "terminal.ansiBrightYellow":"#FABD2F",
        "terminal.ansiCyan":"#8EC07C",
        "terminal.ansiGreen":"#B8BB26",
        "terminal.ansiMagenta":"#D3869B",
        "terminal.ansiRed":"#FB4934",
        "terminal.ansiWhite":"#D5C4A1",
        "terminal.ansiYellow":"#FABD2F"
    }
}
