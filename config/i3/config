# take full sreenshot
bindsym Print exec scrot 'screenshot_%F__%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
# take screenshot with selection
bindsym --release shift+Print exec scrot -s 'screenshot_%F__%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
# take screenshot of focused window
bindsym ctrl+Print exec scrot -u 'screenshot_%F__%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
# translate highlighted text
bindsym ctrl+shift+j exec notitranslation

